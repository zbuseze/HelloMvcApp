@model List<Ogretmen>
@{
    ViewData["Title"] = "Index";
}

<h1>Öğretmen Listesi</h1>
<div>
	<p>Yeni öğretmen kaydı oluşturmak için 'Öğretmen Ekle' butonuna tıklayın. </p>
	<a asp-controller="Ogretmen" asp-action="AddOgretmen" class="btn btn-success">Öğretmen Ekle</a>
</div>

<div>
	<table class="table table-striped table-hover">
		<thead>
			<tr>
				<th>Adı</th>
				<th>Soyadı</th>
				<th>Tc Kimlik</th>
				<th>İşlemler</th>
			</tr>
		</thead>
		<tbody>
			@foreach(var item in Model)
			{
				<tr>
					<td>@item.Ad</td>
					<td>@item.Soyad</td>
					<td>@item.Tckimlik</td>
					<td><a href="/Ogretmen/DeleteOgretmen/@item.Ogretmenid" class="btn btn-danger btn-sm" onclick="return confirm('Emin misiniz?')">Sil</a> <a href="/Ogretmen/UpdateOgretmen/@item.Ogretmenid" class="btn btn-sm btn-primary"> Düzenle</a></td>
				</tr>
			}
		</tbody>
	</table>
</div>