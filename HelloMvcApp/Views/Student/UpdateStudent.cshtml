@model Ogrenci
@{
    ViewData["Title"] = "UpdateStudent";
}

<h1>Öğrenci Bilgileri Güncelleme</h1>

<form asp-controller="Student" asp-action="UpdateStudent" method="post">
    <input type="hidden" asp-for="Ogrenciid" />
    <div class="mb-3">
        <label class="form-label">Öğrenci Adı</label>
        <input class="form-control" type="text" asp-for="Ad">
    </div>
    <div class="mb-3">
        <label class="form-label">Öğrenci Soyadı</label>
        <input class="form-control" type="text" asp-for="Soyad">
    </div>
    <div class="mb-3">
        <label class="form-label">Numarası</label>
        <input class="form-control" type="text" asp-for="Numara">
    </div>

    <input type="submit" class="btn btn-success" value="Kaydet" />
</form>